<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <com.pchmn.materialchips.ChipsInput
        android:id="@+id/chips_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:hint="Enter text"
        app:maxRows="2"
        app:textSize="16sp"
        app:chip_labelColor="@color/chip_text_color"
        app:chip_textSize="16sp"
        app:chip_hasAvatarIcon="true"
        app:chip_detailed_textColor="@color/colorChipViewBackground"
        app:chip_detailed_backgroundColor="@color/glass"
        app:chip_detailed_deleteIconColor="@color/colorChipViewBackground"
        tools:layout_height="44dp"/>

</FrameLayout>